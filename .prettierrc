{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "printWidth": 120,
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.txt",
            "options": {
                "printWidth": 9999999
            }
        }
    ]
}
